# GROQ API Key for language model access (transcription, code generation)
# Get your free API key from: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key-here

# Dedicated GROQ API Key for code compilation/simulation
GROQ_COMPILER_API_KEY=your-groq-compiler-api-key-here

# Groq compiler fallback (when remote/local compilation fails)
# Set to true to enable Groq as a compilation simulator
ENABLE_GROQ_COMPILER=true

# Remote execution provider (set to 'local' to use only local + Groq fallback)
EXEC_PROVIDER=local

# GitHub Personal Access Token for repository operations
# Generate at: https://github.com/settings/tokens
GIT_TOKEN=your-github-personal-access-token-here

# Google Gemini API Key for AI code generation
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=voice_controlled_ide
MONGODB_TEST_DATABASE=voice_controlled_ide_test

# MongoDB Connection Pool Settings
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Security Configuration
# Generate a strong secret key for production: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=false

# File Storage Configuration
AUDIO_UPLOAD_DIR=audio
MAX_AUDIO_FILE_SIZE=50000000
AUDIO_FILE_RETENTION_DAYS=7